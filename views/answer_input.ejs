<form class="form-horizontal test-form">
    <fieldset>
        <legend>Option Form</legend>
        <div class="form-group">
            <label for="select" class="col-lg-2 control-label">IDQuestion</label>

            <div class="col-lg-10">
                <select class="form-control" id="select-question">
                    <% data.forEach(function(question) { %>
                    <option value="<%= question.id %>"><%= question.content %></option>
                    <% }); %>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="inputContent" class="col-lg-2 control-label">Content</label>

            <div class="col-lg-10">
                <input class="form-control" id="inputContentAnswer" placeholder="Content" type="text"
                       name="inputContentAnswer">
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">Result</label>

            <div class="col-lg-10">
                <div class="radio">
                    <label>
                        <input type="radio" name="optionsRadios" id="optionsFalse" value="optionFalse">
                        False
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="optionsRadios" id="optionsTrue" value="optionTrue">
                        True
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <div id="submit-answer" class="btn btn-primary">Ok</div>
            </div>
        </div>
    </fieldset>
</form>
<script>
    $('#submit-answer').click(function () {
        var _idQuestion = $('#select-question').val();
        var _content = $('#inputContentAnswer').val();
        var _result = false;
        //var _optionFalse = $('#optionsFalse').prop('checked');
        var _optionTrue = $('#optionsTrue').prop('checked');
        if (_optionTrue) {
            _result = true;
        }
        $.ajax({
            method: "POST",
            url: "inputAnswer",
            data: {
                id: _idQuestion,
                content: _content,
                result: _result
            }
        })
                .done(function (msg) {
                    alert(msg);
                });
    })
</script>