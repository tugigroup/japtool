<div class="modal-dialog modal-lg nam">
    <div class="modal-content model-show-boook">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"></button>
            <h4 class="modal-title">Book Library</h4>

            <div class="row">
                <div class="col-sm-3">
                    Choose a book
                </div>
                <div class="col-sm-8">
                    <div class="row form-search-book">
                        <form name="" action="" method="">
                            <div class="col-sm-3">
                                <input class="form-control" name="tbSearch" value=""
                                       id="input-search" placeholder="Search" type="text">
                            </div>

                            <div class="col-sm-3">
                                <div class="form-group">
                                    <select class="form-control" id="sel1">
                                        <option>Studying</option>
                                        <option>Complete</option>
                                        <option>Not started learning</option>
                                    </select>

                                </div>
                            </div>
                            <div class="col-sm-1">
                                <button type="submit" class="btn btn-primary"><span
                                            class="glyphicon glyphicon-search"></span></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-body">
            <div class="pre-scrollable showBook mCustomScrollbar" data-mcs-theme="dark">
                <!--start three book info-->

                <div class="row form-showBook">
                    <% for(var i = 0;i < books.length;i++){ %>
                    <div class="col-sm-4">

                        <div class="row">
                            <div class="col-sm-2"> 

                                <% if (books[i].image) { %>
                                    <img id="imglink<%=i%>" src="/media/image/<%=books[i].image%>" width="45" height="45"/>
                                <% } else {%>
                                    <img id="imglink<%=i%>" src="/images/bookicon.jpg" width="45" height="45"/>
                                <% } %>

                            </div>
                            <div class="col-sm-9">
                                <input type="hidden" id="bookid<%=i%>" value="<%= books[i].id %>">
                                <a  onclick="addbook(<%=i%>)" id="bookname<%=i%>" title="<%= books[i].name %>"><p class="lbUser"><%= books[i].name %></p></a>

                                <p title="<%= books[i].level %>" id="booklv<%=i%>">Level : <%= books[i].level %></p>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>

                <hr class="lineBook">
                <!--finish three book info-->
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default " data-dismiss="modal">Close
            </button>
        </div>
    </div>
</div>