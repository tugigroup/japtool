<div class="wrapper learning-group">
    <div class="container">
        <div class="row">
            <div class="content">
                <form action="/japtool/learning/add" method="post">
                    <div class="col-sm-12">
                        <h2>Create learning</h2>
                    </div>
                    <div class="clearfix">
                        <div class="col-sm-10 learning-group-item">
                            <div class="row">
                                <form action="" method="POST">
                                    <div class="col-sm-2">
                                        <label>Learning Name</label>
                                    </div>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="" placeholder="Class Name"
                                               name="nameLearning">
                                    </div>
                                    <div class="col-sm-2">
                                        <label>Short Description</label>
                                    </div>
                                    <div class="col-sm-10">
                                        <textarea class="form-control" rows="4" name="description"></textarea>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-sm-2 hidden-md hidden-xs">
                            <div class="learning-group-image">
                                <label for="fileButton"><img id="imgGr"
                                                             src="/images/group-friends/masonry_02-400x400.jpg"/></label>
                                <span class="glyphicon glyphicon-upload icon-upload" id="btnUp" for="fileButton"></span>
                                <input type="file" id="fileButton"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group formStartFinish">
                        <label class="col-md-2 control-label">Learning plant</label>

                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-md-12" id="datepicker">
                                    <div class="input-group">
                                        <span class="input-group-addon">From</span>
                                        <input type="date" class="form-control" name="startDate">
                                        <span class="input-group-addon">To</span>
                                        <input type="date" class="form-control" name="finishDate">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="library-content-desc">
                        <div class="col-sm-12">
                            <h2></h2>

                            <h3></h3>

                            <div class="desc-library">
                                <p></p>
                            </div>
                        </div>
                    </div>
                    <!-- Trigger the modal with a button -->
                    <button type="button" class="btn btn-info btn-chooseBook" data-toggle="modal"
                            data-target="#myModal">
                        Choose a book
                    </button>
                    <button type="submit" class="btn btn-success" data-dismiss="modal">Create Learning</button>
                </form>
            </div>
        </div>
    </div>
</div>