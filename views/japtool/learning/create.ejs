<form action="/japtool/learning/add" method="post" id="create-learning">
    <div class="wrapper learning-group">
        <div class="container">
            <div class="row">
                <div class="content">
                    <div class="col-sm-12">
                        <h2>Create learning</h2>
                    </div>
                    <div class="clearfix">
                        <div class="col-sm-10 learning-group-item">
                            <div class="row">
                                <div class="col-sm-2">
                                    <label>Learning Name</label>
                                </div>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control"
                                           placeholder="Class Name"
                                           name="nameLearning"
                                           id="nameLearning"/>
                                </div>
                                <div class="col-sm-2">
                                    <label>Short Description</label>
                                </div>
                                <div class="col-sm-10">
                                    <textarea class="form-control"
                                              rows="4"
                                              id="description"
                                              name="description"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2 hidden-md hidden-xs">
                            <div class="learning-group-image">
                                <label for="fileButton"><img id="imgGr"
                                                             src="/images/group-friends/masonry_02-400x400.jpg"/></label>
                                <span class="glyphicon glyphicon-upload icon-upload" id="btnUp" for="fileButton"></span>
                                <input type="file" id="fileButton"/>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix">
                        <div class="col-sm-10 learning-group-item">
                            <div class="row">
                                <div class="col-sm-2">
                                    <label>From</label>
                                </div>
                                <div class="col-sm-4">
                                    <input type="date" class="form-control" name="startDate" id="startDate">
                                </div>
                                <div class="col-sm-2">
                                    <label>To</label>
                                </div>
                                <div class="col-sm-4">
                                    <input type="date" class="form-control" name="finishDate" id="finishDate">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2 hidden-md hidden-xs">
                        </div>
                    </div>
                    <div class="library-content-desc">
                        <div class="col-sm-12">
                            <h2></h2>

                            <h3></h3>

                            <div class="desc-library" id="placebook">
                            </div>
                        </div>
                    </div>
                    <!-- Trigger the modal with a button -->
                    <div class="modal fade" id="show-books" data-backdrop="static" data-keyboard="false">
                    </div>
                    <input type="button"
                           class="btn btn-danger btn-chooseBook"
                           onclick="loadbooks()"
                           value="Choose a book"
                           id="btn-show-books"/>
                    <input type="submit"
                           onclick="createLearning()"
                           class="btn btn-success"
                           value="Create learning"
                           id="btnCreateLearning"/>
                </div>
            </div>
        </div>
    </div>
</form>
