<div class="modal-content">

        <div class="modal-header">
            <h4 class="modal-title">Edit your learning</h4>

            <div class="library-content-desc" style="margin-bottom: 150px">
                <div class="col-sm-12">
                    <div class="desc-library" id="placebook">

                        <% if(learning){ %>
                        <img
                                <% if (learning.bookMaster.image) { %>
                                src="/media/image/<%= learning.bookMaster.image %>"
                                <% } else { %>
                                src="/images/bookicon.jpg"
                                <% } %>
                                width="100" height="100">
                        <input id="idbook" type="hidden" name="bookMaster"
                               value="<%= learning.bookMaster.id %>">
                        <br>
                        <b><%= learning.bookMaster.name %></b><br>
                        <b>Level : <%= learning.bookMaster.level %></b>

                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-body">
            <div class="content">
                <div class="clearfix">
                    <div class="col-sm-10 learning-group-item">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Notes</label>
                            </div>
                            <div class="col-sm-10">
                                    <textarea class="form-control"
                                              rows="4"
                                              id="notes"
                                              name="notes"><%= learning.notes %></textarea>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="clearfix">
                    <div class="col-sm-10 learning-group-item">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>From</label>
                            </div>
                            <div class="col-sm-4">
                                <input type="hidden" value="<%= learning.id %>" name="id">
                                <input type="date" disabled="true" class="form-control"
                                       value="<%= learning.stringStartDate %>" name="startDate"
                                       id="startDate"><br>

                                <div id="mesagestartDate"></div>
                            </div>

                            <div class="col-sm-2">
                                <label>To</label>
                            </div>
                            <div class="col-sm-4">
                                <input type="date" class="form-control" value="<%= learning.stringFinishDate %>"
                                       name="finishDate" id="finishDate"><br>

                                <div id="mesagefinishDate"></div>
                            </div>

                        </div>
                    </div>
                    <div class="col-sm-2 hidden-md hidden-xs">
                    </div>
                </div>

                <!-- Trigger the modal with a button -->
                <div class="modal fade" id="show-books" data-backdrop="static" data-keyboard="false">

                </div>
                <div id="mesageBook"></div>
            </div>
        </div>
        <div class="modal-footer">
            <input type="submit"
                   class="btn btn-success"
                   value="Save"
                   id="btnCreateLearning"/>
            <a href="#" class="btn btn-warning" role="button" data-dismiss="modal">Close</a>
        </div>
</div>



