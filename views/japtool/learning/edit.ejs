<form action="/japtool/learning/edit" method="post" id="create-learning" onsubmit="return validateEditLearning()">
    <div class="wrapper learning-group">
        <div class="container">
            <div class="row">
                <div class="content">
                    <div class="col-sm-12">
                        <h2>Create learning</h2>
                    </div>
                    <div class="clearfix">
                        <div class="col-sm-10 learning-group-item">
                            <div class="row">
                                <div class="col-sm-2">
                                    <label>Notes</label>
                                </div>
                                <div class="col-sm-10">
                                    <textarea class="form-control"
                                              rows="4"
                                              id="notes"

                                              value="<%=learning.notes%>"
                                              name="notes"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2 hidden-md hidden-xs">
                            <div class="learning-group-image">
                                <label for="fileButton"><img id="imgGr"
                                                             src="/images/group-friends/masonry_02-400x400.jpg"/></label>
                                <span class="glyphicon glyphicon-upload icon-upload" id="btnUp" for="fileButton"></span>
                                <input type="file" id="fileButton"/>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix">
                        <div class="col-sm-10 learning-group-item">
                            <div class="row">
                                <div class="col-sm-2">
                                    <label>From</label>
                                </div>
                                <div class="col-sm-4">
                                    <input type="hidden" value="<%=learning.id%>" name="id">
                                    <input type="date" disabled="true" class="form-control" value="<%=startDateString%>" name="startDate" id="startDate" ><br>

                                    <div id="mesagestartDate"></div>
                                </div>

                                <div class="col-sm-2">
                                    <label>To</label>
                                </div>
                                <div class="col-sm-4">
                                    <input type="date" class="form-control" value="<%=finishdate%>" name="finishDate" id="finishDate"><br>

                                    <div id="mesagefinishDate"></div>
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-2 hidden-md hidden-xs">
                        </div>
                    </div>
                    <div class="library-content-desc" style="margin-bottom: 150px">
                        <div class="col-sm-12">
                            <h2></h2>

                            <h3></h3>

                            <div class="desc-library" id="placebook">

                                <% if(learning){ %>

                                <img
                                        <% if (learning.bookMaster.image) { %>
                                        src="/media/image/<%= learning.bookMaster.image %>"
                                        <% } else { %>
                                        src="/images/bookicon.jpg"
                                        <% } %>
                                        width="100" height="100">
                                <input id="idbook" type="hidden" name="bookMaster" value="<%= learning.bookMaster.id %>">
                                <br>
                                <b><%= learning.bookMaster.name %></b><br>
                                <b>Level : <%= learning.bookMaster.level %></b>

                                <% } %>
                            </div>
                        </div>
                    </div>
                    <!-- Trigger the modal with a button -->
                    <div class="modal fade" id="show-books" data-backdrop="static" data-keyboard="false">

                    </div>
                    <div id="mesageBook"></div>
                    <input type="button" disabled="true"
                           class="btn btn-danger btn-chooseBook"
                           onclick="loadbooks()"
                           value="Choose a book"
                           id="btn-show-books"/>
                    <input type="submit"
                           class="btn btn-success"
                           value="EDIT"
                           id="btnCreateLearning"/>
                </div>
            </div>
        </div>
    </div>
</form>
