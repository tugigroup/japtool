<div class="body-manager-learning" style="padding-bottom: 150px">
    <div class="container">
        <div class="row">
            <div id="default-show" class="clearfix">
                <div class="default-show">
                    <div class="col-md-offset-10 col-sm-2">
                        <a href="/japtool/learning/create">
                            <button type="button" class="btn btn-danger">Create New Learning</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <%if(learnList.length<=0){%>
      <div class="container">
        <div class="row" style="height: 200px">
          <h2 class="text-center">Ban chua co mot learning nao! Tao mot learning tai <u><a href="/japtool/learning/create">day</a></u> hoac thoat'!!!</h2>
        </div>
      </div>
        <%}%>
        <% for(var j = 0;j < uniqueType.length;j++){ %>
        <div class="row">
            <div class="col-sm-3">
                <h2>
                    <%= uniqueType[j] %>
                </h2>
            </div>
            <div class="col-sm-12 clearfix">
                <div class="library-page-line"></div>
            </div>
        </div>
        <div class="row manager-learning-item">
            <% for(var i = 0;i < learnList.length;i++){ %>
            <% if(learnList[i].bookMaster.type == uniqueType[j]){ %>
            <div class="col-sm-4">
                <div class="row">
                    <div class="col-sm-4">
                        <a href="#" class="text-primary lb-learn-name"
                           title="Click to view this library details"
                           data-toggle="modal" data-target="#lib-1"><img class="media-object col-xs-3 libImg"

                                    <% if (learnList[i].bookMaster.image) { %>
                                                                         src="/media/image/<%= learnList[i].bookMaster.image %>"
                                    <% } else { %>
                                                                         src="/images/bookicon.jpg"
                                    <% } %>

                                                                         title="Click to view this library details"></a>
                    </div>
                    <div class="col-lg-8">
                        <h4 class="media-heading">
                            <a href="#" class="text-primary lb-learn-name"
                               title="Click to view this library details"
                               data-toggle="modal" data-target="#lib-1"><%= learnList[i].bookMaster.name %></a>
                        </h4>
                        <ul>
                            <li>
                                <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
                                <%= learnList[i].bookMaster.name %>

                            </li>
                            <li>
                                <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                                <%= learnList[i].status %>
                            </li>
                            <li>
                                <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
                                <a class="text-danger" href="#" data-toggle="modal" data-target="#lib-1">Preview</a> -
                                <a href="/japtool/BookMaster/practice/?id=<%= learnList[i].bookMaster.id %>&learnID=<%= learnList[i].id %>">Go to Learn</a>
                            </li>
                        </ul>
                    </div>

                    <div class="modal fade" id="lib-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"
                                            aria-label="Close"><span
                                                aria-hidden="true">Ã—</span></button>
                                    <h4 class="modal-title">Learning Details</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="row">
                                                <div class="media">
                                                    <div class="media-left">
                                                        <a href="#">
                                                            <img class="media-object img-book"
                                                                 src="/images/track.jpg">
                                                        </a>
                                                    </div>
                                                    <div class="media-body">
                                                        <ul>
                                                            <h4>Details:</h4>
                                                            <li>
                                                                <span class="glyphicon glyphicon-play"
                                                                      aria-hidden="true"></span> From
                                                                : <%= learnList[i].startDate %>
                                                            </li>
                                                            <li>
                                                                <span class="glyphicon glyphicon-stop"
                                                                      aria-hidden="true"></span> To
                                                                : <%= learnList[i].finishDate %>
                                                            </li>
                                                            <li>
                                                                <span class="glyphicon glyphicon-book"
                                                                      aria-hidden="true"></span>
                                                                <%= learnList[i].bookMaster.name %>
                                                            </li>
                                                            <li>
                                                                <h4>Description</h4>
                                                                <%= learnList[i].bookMaster.description %>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <a href="#" class="btn btn-primary" role="button">Edit</a>
                                    <a href="#" onclick="deleteLearning()" title="<%= learnList[i].id %>"
                                       id="deleteLearning" class="btn btn-danger" role="button">Delete</a>
                                    <a href="#" class="btn btn-warning" role="button" data-dismiss="modal">Close</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <% } %>
            <% } %>
        </div>
        <% } %>
    </div>
</div>
