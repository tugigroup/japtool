<div class="wrapper learning-group">
    <div class="container">
        <div class="row">
            <div class="content">
                <h2 id="add-book-detail"><%= book.name %> <span id ="lessonName"></span></h2>
                <div id="learning-nav" class="skin-green sidebar-mini">
                    <div class="wrapper">
                        <header class="main-header">
                            <!-- Logo -->
                            <a href="" class="logo" data-toggle="offcanvas" role="button">
                                <!-- mini logo for sidebar mini 50x50 pixels -->
                                <span class="logo-mini" class="sidebar-toggle"><i class="fa fa-bars"></i></span>
                                <!-- logo for regular state and mobile devices -->
                                <span class="logo-lg"><i class="fa fa-bars"></i><%= __('Lesson') %></span>
                            </a>
                            <!-- Header Navbar: style can be found in header.less -->
                        </header>
                        <!-- Left side column. contains the logo and sidebar -->
                        <aside class="main-sidebar">
                            <!-- sidebar: style can be found in sidebar.less -->
                            <section class="sidebar pre-scrollable">
                                <!-- Sidebar user panel -->
                                <input type="hidden" id="learnID" value="<%= learnID %>">
                                <ul class="sidebar-menu">
                                    <% 
                                    var lessionName = '';

                                    for (var i = 0; i < lessonList.length; i++) {
                                        
                                        lessionName = lessonList[i].lesson;

                                        // pre-check status
                                        var status = "lesson-success";
                                        var noHis = true;
                                        for (var subIdx = i; subIdx < lessonList.length; subIdx++) {
                                            if (lessionName == lessonList[subIdx].lesson) {
                                                if (lessonList[subIdx].learnHistory) {
                                                    noHis = false;

                                                    if (!lessonList[subIdx].learnHistory.status || lessonList[subIdx].learnHistory.status == 'false'){
                                                        status = 'lesson-danger';
                                                    }
                                                }
                                                
                                            } else {
                                                break;
                                            }
                                        }

                                        if (noHis){
                                             status = '';
                                        }


                                        %>
                                        
                                        <li class="treeview">
                                            <a class="lesson <%= status%>" href="javascript: void(0)">
                                                <i class="fa fa-edit"></i> <span><%= lessonList[i].lesson %></span>
                                                <i class="fa fa-angle-left pull-right"></i>
                                            </a>

                                            <ul class="treeview-menu">

                                            <%
                                            for (subIdx = i; subIdx < lessonList.length; subIdx++) {
                                                if (lessionName == lessonList[i].lesson) {

                                                    if (!lessonList[subIdx].learnHistory || !lessonList[subIdx].learnHistory.status) {
                                                        status = '';
                                                    } else if ( !lessonList[subIdx].learnHistory.status || lessonList[subIdx].learnHistory.status == 'false') {
                                                        status = 'lesson-danger';
                                                    } else {
                                                        status = 'lesson-success';
                                                    }

                                                    %>
                                                        <li><a class="sub-lesson <%= status%>" href='javascript: void(0)'
                                                               id="<%= lessonList[i].id %>"
                                                               onclick="father('<%= lessonList[i].useModule %>', <%=
                                                                   lessonList[i].dataExtractCondition %>, '<%= lessonList[i].id %>','<%= lessonList[i].lesson %>','<%= lessonList[i].subLesson %>');"><i
                                                                        class="fa fa-circle-o"></i> <%= lessonList[i].subLesson
                                                                %></a>
                                                        </li>
                                                    <%
                                                    i += 1;

                                                } else { 
                                                    i -= 1;

                                                    break;
                                                }
                                            }
                                            %>

                                            </ul>
                                        </li>
                                    <%
                                    }
                                    %>                                    
                                </ul>
                            </section>
                            <!-- /.sidebar -->
                        </aside>
                        
                        <!-- Content Wrapper. Contains page content -->
                        <div class="content-wrapper content-lesson">
                            <section class="content-wrapper-body">
                                <div class="row">
                                    <div id="container-learn">
                                        <% if( !goLessonID ){ %>
                                        <h3 class="text-center text-danger"><%= book.name %></h3>

                                        <div class="row">
                                            <div class="col-sm-6 text-right"><span><%= __("Type") %>: </span></div>
                                            <div class="col-sm-6"><%= book.type %></div>
                                            <div class="col-sm-6 text-right"><span><%= __("Level") %>: </span></div>
                                            <div class="col-sm-6"><%= book.level %></div>
                                            <div class="col-sm-6 text-right"><span><%= __("Sort") %>: </span></div>
                                            <div class="col-sm-6"><%= book.sort %></div>
                                            <div class="col-sm-6 text-right"><span><%= __("Number Lesson") %>: </span>
                                            </div>
                                            <div class="col-sm-6"><%= book.lessonNum %></div>
                                            <div class="col-sm-6 text-right"><span><%= __("Learn Hour") %>: </span>
                                            </div>
                                            <div class="col-sm-6"><%= book.hoursForLearn %></div>
                                            <div class="col-sm-6 text-right"><span><%= __("Number User") %>: </span>
                                            </div>
                                            <div class="col-sm-6"><%= book.usedNum %></div>
                                            <div class="col-sm-6 text-right"><span><%= __("Description") %>: </span>
                                            </div>
                                            <div class="col-sm-6"><%= book.description %></div>
                                        </div>
                                        <% } else{ %>
                                        <input type="hidden" id="goLessonID" value="<%= goLessonID %>">
                                        <% } %>
                                    </div>
                                </div>
                            </section>
                        </div>




                    </div>
                    <!-- ./wrapper -->
                </div>
            </div>

        </div>
    </div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">
                    <%=__("Your knowledge is n't good ! try again")%>
                </h4>
            </div>
            <div class="modal-body">
                <h4 class="modal-title" id="myModalContent">
                    <%=__("Your Mark")%><lable id="mark-view"></lable>
                </h4>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-nextLesson" onclick="nextLesson();" class="btn btn-primary"
                        data-dismiss="modal"><%=__("Next Lesson")%>
                </button>
                <button type="button" id="btn1" class="btn btn-success" data-dismiss="modal">Close</button>
                <!--<button type="button" id="btn2" class="btn btn-primary">Save changes</button>-->
            </div>
        </div>
    </div>
</div>
<script>
    function father(module, condition, detailId, lesson, subLesson) {
        learn(module, condition);
        savee(lesson, detailId);
        $('#lessonName').html('&nbsp;/&nbsp;' + lesson + '-' + subLesson);
    }
    function learn(module, condition) {
        var strCondition = JSON.stringify(condition);
        $('#container-learn').load('/japtool/' + module + '/?condition=' + strCondition);
    }
    function savee(lesson, detailId) {
        var learnID = $('#learnID').val();
        var bookDetail = detailId;
        var user = '<%= session.User.id %>';
        var startDate = new Date();
        $.ajax({
            method: "POST",
            url: "/japtool/Learning/saveHistory",
            data: {
                lesson: lesson,
                user: user,
                selfLearning: learnID,
                bookDetail: bookDetail,
                startDate: startDate
            }
        })
                .done(function (msg) {
                    console.log(msg);
                });
    }
    function openTreeView(lessionID) {
        $('.sub-lesson').each(function (itemLessonID, index) {
            var lessonBookID = $(this).attr('name');
            //add Class Active to show screen
            if (lessonBookID == lessionID) {
                $(this).closest('.treeview').addClass('active');
//                $(this).closest('.treeview .treeview-menu .sub-lesson:last-child').addClass('active');
            }
        });
    }
    function nextLesson() {
        $('a.lesson').each(function (index, nextLessonID) {
            var lessonD = !$(this).hasClass('lesson-danger');
            var lessonS = !$(this).hasClass('lesson-success');
            if (lessonD && lessonS) {
                $(this).parent(".treeview").children().children().children(".sub-lesson").click();
                $("li").removeClass("active");
                openTreeView($(this).parent(".treeview").children().children().children(".sub-lesson").attr("name"));
                return false;
            }
        });
    }
    function paintClickedSublesson(){
        $("a.sub-lesson").click(function () {
            $("a.sub-lesson").removeClass("font-weight-sub-lesson");
            $(this).addClass("font-weight-sub-lesson");
        });
    }
    window.onload = function () {
        // var useModule = $('#useModule').val();
        // var condition = trimSpace($('#conditionS').val());
        // $("#container-learn").load('/japtool/' + useModule + '/?condition=' + condition);
        var goLessonID = $('#goLessonID').val();
        $("#"+goLessonID).trigger("click");
        openTreeView(goLessonID);
        paintClickedSublesson();
    }

</script>
