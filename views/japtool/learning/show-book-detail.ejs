<div class="wrapper learning-group">
    <div class="container">
        <div class="row">
            <div class="content">
                <h2 id="add-book-detail"><%= nameBook %></h2>

                <div id="learning-nav" class="skin-green sidebar-mini">
                    <div class="wrapper">
                        <header class="main-header">
                            <!-- Logo -->
                            <a href="" class="logo" data-toggle="offcanvas" role="button">
                                <!-- mini logo for sidebar mini 50x50 pixels -->
                                <span class="logo-mini" class="sidebar-toggle"><i class="fa fa-bars"></i></span>
                                <!-- logo for regular state and mobile devices -->
                                <span class="logo-lg"><i class="fa fa-bars"></i><%= __('Lesson') %></span>
                            </a>
                            <!-- Header Navbar: style can be found in header.less -->
                        </header>
                        <!-- Left side column. contains the logo and sidebar -->
                        <aside class="main-sidebar">
                            <!-- sidebar: style can be found in sidebar.less -->
                            <section class="sidebar pre-scrollable">
                                <!-- Sidebar user panel -->
                                <ul class="sidebar-menu">
                                    <% for(var i = 0;i < uniqueLessons.length;i++){ %>
                                    <li class="treeview">
                                        <a id="lesson" href="javascript: void(0)">
                                            <i class="fa fa-edit"></i> <span><%= uniqueLessons[i] %></span>
                                            <i class="fa fa-angle-left pull-right"></i>
                                        </a>
                                        <% if(bookDetails){ %>
                                        <ul class="treeview-menu">
                                            <% bookDetails.forEach(function(bookDetail){ %>
                                            <% if(uniqueLessons[i] == bookDetail.lesson) { %>
                                            <li><a class="sub-lesson" href='javascript: void(0)'
                                                   name="<%= bookDetail.id %>"
                                                   onclick="father('<%= bookDetail.useModule %>', <%= bookDetail.dataExtractCondition %>,'<%= bookDetail.lesson %>');"><i
                                                            class="fa fa-circle-o"></i> <%= bookDetail.subLesson %></a>
                                            </li>
                                            <% } %>
                                            <% }) %>
                                        </ul>
                                        <% } %>

                                    </li>
                                    <% } %>
                                </ul>
                            </section>
                            <!-- /.sidebar -->
                        </aside>
                        <!-- Content Wrapper. Contains page content -->
                        <div class="content-wrapper content-lesson">
                            <section class="content-wrapper-body">
                                <div class="row">
                                    <div id="container-learn"></div>
                                </div>
                            </section>
                        </div>
                    </div>
                    <!-- ./wrapper -->
                </div>


            </div>

        </div>
    </div>
</div>
<script>
    function father(module, condition, lesson) {
        learn(module, condition);
        savee(lesson);
    }
    function learn(module, condition) {
        var strCondition = JSON.stringify(condition);
        console.log(strCondition);
        $('#container-learn').load('/japtool/' + module + '/?condition=' + strCondition);
    }
    function savee(lesson) {
        alert(lesson);

        var bookDetail = $('.sub-lesson').attr('name');
        var user = '<%= session.User.id %>';
        var startDate = new Date();

        $.ajax({
            method: "POST",
            url: "/japtool/Learning/saveHistory",
            data: {
                lesson: lesson,
                user: user,
                bookDetail: bookDetail,
                startDate: startDate
            }
        })
                .done(function (msg) {
                    console.log(msg);
                });
    }
    window.onload = function () {

    }
</script>
