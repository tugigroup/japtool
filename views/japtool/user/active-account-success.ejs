<% if(code == 'success'){ %>
<div class="wrapper">
  <div class="container">

    <div class="col-sm-12 text-center success-register">
      <h3><%= __('Active Success') %></h3>

      <p><%= __('Welcome to Japtool Learning.') %></p>

      <p><%= __('Click here to login system') %>
        <span class="label-success label">
          <a class="login-back" href="/japtool/auth"><%= __('Login') %></a>
        </span>
      </p>
    </div>
  </div>
</div>
<% }else{ %>
<div class="wrapper">
  <div class="container">

    <div class="col-sm-12 text-center success-register">
      <h3><%= __('Active Fail') %></h3>

      <p><%= __('Your account is invalid.') %></p>

      <p><%= __('Click here to sign up') %>
        <span class="label-danger label">
          <a href="/japtool/user/new"><%= __('Sign Up') %></a>
        </span>
      </p>
    </div>
  </div>
</div>
<% } %>
