<div class="container">
  <form name="getPassword" action="" method="">
    <div class="row">
      <div class="col-sm-offset-1 col-sm-10">
        <div class="row">
          <div class="col-sm-12">
            <h3 style="font-weight: 400"><%= __('Did You Forget Your Password') %>?</h3>
            <hr>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <p class="text-primary">
              <i>
                <%= __('Enter the e-mail address associated with your account. Click submit to have your password e-mailed to you') %>
                .
              </i>
            <p>
            <hr>
          </div>
        </div>
        <div class="row">
          <div class="form-group required account">
            <label class="col-sm-2 control-label" for="input-email"><%= __('Email') %>: </label>

            <div class="col-sm-8">
              <input type="email" name="email" value="" placeholder="<%= __('Email') %>" id="input-email"
                     class="form-control">
            </div>

            <div class="col-sm-2">
              <button type="submit" class="btn btn-danger"><%= __('Continue') %></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
