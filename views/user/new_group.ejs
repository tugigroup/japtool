<div class="resgiter content">
    <form action="create" method="POST" class="form-horizontal form-signin">
        <h2 class="text-center">Create Group</h2>

        <div class="form-group">
            <label class="col-sm-4 control-label">Group Name</label>

            <div class="col-sm-8">
                <input type="text" class="form-control" placeholder="Group Name" name="groupName">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">Group Description</label>

            <div class="col-sm-8">
                <input type="text" class="form-control" placeholder="Group Desc" name="groupDesc">
            </div>
        </div>
        <div class="form-group">
            <div class="text-right col-sm-12">
                <button type="submit" class="btn btn-primary">Create</button>

            </div>
        </div>
    </form>
</div>
