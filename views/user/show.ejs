<div class="col-sm-12 content"><h1>Infomation user <%- user.username %></h1></div>
<div class="col-sm-6">
    <% if(user.admin){ %>
    <td><img src="/images/admin.png"/> Admin</td>
    <% } else{ %>
    <td><img src="/images/pawn.png"/>Member</td>
    <% } %>
    <input type="hidden" value="<%- user.id %>" id="hiddien_Id">
    <p><%- user.firstname %> <%- user.lastname %></p>

    <p>Email: <%- user.email %></p>

    <p>Address: <%- user.address %></p>

    <p>Website: <%- user.website %></p>

    <a class="btn btn-danger btn-group-lg" href="/user/edit/<%= user.id %>">Edit</a>
</div>
<div class="col-sm-6">
    <div class="row">
     <form action="/user/findBuddy" method="POST">
         <input type="hidden" value="<%- user.id %>" name="idUser">
         <button type="submit" class="btn btn-warning">List Friends</button>
     </form>
        <div class="col-sm-4">
            Search Friend:
        </div>
        <div class="col-sm-8">
            <!--<form class="form-inline" action="/user/searchUser" method="POST">-->
            <form class="form-inline">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search Friend" name="username" id="username">
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-primary" id="submit">Search Friend</button>
                </div>
            </form>
        </div>
    </div>
    <div id="info-User"></div>
</div>
<script src="/js/dependencies/jquery-1.9.1.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#submit').click(function () {
            var username = $('#username').val();
            var id = $('#hiddien_Id').val();
            $.ajax({
                url: '/user/searchUser',
                type: 'POST',
                data: {
                    username: username,
                    id_origin: id
                },
                cache: false,
                success: function (data) {
                    $('#info-User').append(data);
                },
                error: function() {
                    alert('loi roi nhe');
                }
            });
        });
    })
</script>